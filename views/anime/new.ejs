<!DOCTYPE html>
<html lang="en">
<%- include("../partials/head.ejs") %> 
<body>
    <%- include("../partials/header.ejs") %>
    <main class="parent">
        <%- include("../partials/left-div.ejs") %>
        <div>
        <div class="navbar2">
            <a href="/anime"><button>Home</button></a>
        </div>
        <form action="/anime" method="post">
        <fieldset>
            <legend>Add an anime</legend>
            <label>
                Title: <input type="text" name="title" placeholder="enter anime title">
            </label>
            <label>
                Completed: <input type="checkbox" name="completed">
            </label>
            <label>
                Year Released: <input type="number" name="yearReleased">
            </label>
            <label>
                Watched Episodes: <input type="number" name="watchedEpisodes">
            </label>
            <label>
                Total Episodes: <input type="number" name="totalEpisodes">
            </label>
        </fieldset>
        <div class="create-new">
        <input type="submit" value="Create new anime">
        </div>
        </form>
        </div>
        <%- include("../partials/right-div.ejs") %>
        <%- include("../partials/footer.ejs") %> 
    </main>
</body>
</html>